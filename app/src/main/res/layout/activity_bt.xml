<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="systemInfo"
            type="com.mvvm.zzy.mvvmforbt03.Model.SystemInfo"/>

        <variable
            name="switchButton"
            type="com.mvvm.zzy.mvvmforbt03.ViewModel.SwitchButtonViewModel"/>

        <variable
            name="searchButton"
            type="com.mvvm.zzy.mvvmforbt03.ViewModel.SearchButtonViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFE0"
        tools:context="com.mvvm.zzy.mvvmforbt03.View.BtActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/ll_control_btn"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_switch_BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="@{systemInfo.open ? @string/close_bt : @string/open_bt}"
                android:background="@drawable/button_selector"
                android:onClick="@{switchButton.switchButtonChangedListener}"/>
            <Button
                android:id="@+id/btn_search_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="@{systemInfo.search ? @string/stop_search : @string/start_search}"
                android:onClick="@{searchButton.searchButtonChangedListener}"
                android:background="@drawable/button_selector"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
